{
  "name": "snowpack-template-tailwind",
  "version": "0.3.3",
  "author": "Jonathan Alvarez",
  "description": "Snowpack CSA Template for tailwind, prettier and autopublish on GH pages",
  "repository": "github:oisincoveney/oisincoveney.github.io",
  "keywords": [
    "snowpack",
    "csa-template"
  ],
  "license": "MIT",
  "scripts": {
    "start": "snowpack dev",
    "build": "snowpack build",
    "format": "prettier --write \"src/**/*.js\"",
    "lint": "prettier --check \"src/**/*.js\""
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true
  },
  "files": [
    ".gitignore",
    ".github/workflows/publish.yml",
    "public",
    "src",
    "snowpack.config.js",
    "yarn.lock"
  ],
  "devDependencies": {
    "@snowpack/plugin-postcss": "^1.0.11",
    "postcss": "^8.2.1",
    "postcss-cli": "^8.3.1",
    "prettier": "^2.0.5",
    "pretty-quick": "^3.1.0",
    "snowpack": "^2.17.1",
    "tailwindcss": "^2.0.2"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.15.1",
    "autoprefixer": "^10.1.0",
    "postcss-import": "^14.0.0"
  }
}
